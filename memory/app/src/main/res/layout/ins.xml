<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:background="#FFCA28"
		android:orientation="vertical"
		>
		<TextView
			android:id="@+id/textview3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="85dp"
			android:layout_marginTop="25dp"
			android:padding="8dp"
			android:text="Instructions"
			android:textSize="25sp"
			android:textStyle="italic"
			android:textColor="#000000"
			/>
		<TextView
			android:id="@+id/textview2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="25dp"
			android:padding="8dp"
			android:text="The four colored boxes will highlight in particular sequence. Correctly replicate the shown sequence by clicking the boxes to proceed to the next level. There are six levels of increasing difficulty."
			android:textSize="18sp"
			android:textColor="#000000"
			/>
		<Button
			android:id="@+id/play"
			android:layout_width="208dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:layout_marginTop="25dp"
			android:padding="8dp"
			android:text="Play"
			android:textSize="18sp"
			android:textStyle="bold|italic"
			android:textColor="#000000"
			/>
	</LinearLayout>
</LinearLayout>
